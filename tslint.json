{
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "**/RickAndMortyApi/**",
      "src/config/environments.ts"
    ]
  },
  "rules": {
    "indent": [true, "spaces", 2],
    "trailing-comma": [false, {"multiline": "always", "singleline": "never"}],
    "interface-name": [false, "always-prefix"],
    "no-magic-numbers": [true, -1, 0, 1, 2, 3, 4, 5, 6, 100, 200, 400, 500],
    "no-unused-variable": true,
    "no-empty": false,
    "curly": false,
    "component-class-suffix": false,
    "no-console": [true,
      "time",
      "timeEnd",
      "trace"
    ],
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      140
    ],
    "no-string-literal": false,
    "no-use-before-declare": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      false,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ]
  }
}
